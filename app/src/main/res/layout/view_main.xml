<?xml version="1.0" encoding="utf-8"?>
<oleg.osipenko.mai.presentation.views.MainView xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/bkg"
        app:placeholderImage="@drawable/placeholder"
        app:placeholderImageScaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@android:color/white"
        android:background="@color/mai_blue"
        android:layout_marginBottom="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</oleg.osipenko.mai.presentation.views.MainView>