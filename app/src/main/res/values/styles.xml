<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mai_blue</item>
        <item name="colorPrimaryDark">@color/mai_dark_blue</item>
        <item name="android:textColorLink">@color/mai_blue</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/mai_dark_blue</item>
    </style>

    <style name="Tabs" parent="Widget.Design.TabLayout">
        <item name="android:textAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabMode">scrollable</item>
        <item name="android:background">@color/mai_blue</item>
    </style>
    
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/mai_dark_blue</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/mai_blue</item>
    </style>

</resources>
